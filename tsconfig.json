{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*", "unit/config.test.ts"]
}
